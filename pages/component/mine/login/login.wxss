    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
}
 
.content {
    text-align: center;
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
.apply {
    font-size: 35rpx; 
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 20rpx;
    font-size: 35rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}